{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",
    "rootDir": "src",                                 
    "outDir": "build",                                  
    "esModuleInterop": true,                                                     
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
  }
}
